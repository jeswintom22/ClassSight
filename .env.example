# Environment Variables for ClassSight

# ==================== SECURITY WARNING ====================
# NEVER commit the actual .env file to version control!
# Copy this file to .env and fill in your actual values.
# =========================================================

# ==================== API Keys ====================
# Google Gemini API Key (get from: https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# ==================== Server Configuration ====================
HOST=0.0.0.0
PORT=8000
DEBUG=True

# ==================== Security Settings ====================

# CORS (Cross-Origin Resource Sharing)
# For development: Allow localhost
# For production: Set to your specific domain(s), comma-separated
# Example: CORS_ORIGINS=https://classsight.com,https://app.classsight.com
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,http://127.0.0.1:8000

# Allow all origins (ONLY for development, set to False in production!)
CORS_ALLOW_ALL=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_HEALTH=60/minute
RATE_LIMIT_ANALYSIS=10/minute
RATE_LIMIT_DEFAULT=30/minute

# File Upload
MAX_UPLOAD_SIZE=10485760    # 10 MB in bytes

# Input Validation
MAX_TEXT_LENGTH=50000

# ==================== OCR Settings ====================
OCR_LANGUAGE=en
OCR_GPU=False

# ==================== Frame Processing ====================
FRAME_CAPTURE_INTERVAL=3

# ==================== AI Settings ====================
AI_MODEL=gemini-flash-latest
AI_MAX_TOKENS=1024
AI_TEMPERATURE=0.7
